<%- include("header") -%>

    <div class="row">

        <div class="col-md-7 info">
            <h1>
                <%=place.name%>
            </h1>
            <p class="placepara">
                <%=place.info%>
            </p>
            <iframe src="<%=place.map%>" width="750" height="250" frameborder="5"
                style="border-radius:20px; margin-left: 5%;" allowfullscreen="" aria-hidden="false"
                tabindex="0"></iframe>

        </div>
        <div class="col-md-4 placeimg">
            <img src="<%=place.imagel%>" alt="destimg">
            <div class="ratings" style="margin: 0;margin-top: 6%;text-align: center;">
                <script src="https://use.fontawesome.com/a6f0361695.js"></script>

                <h4 id="fh2">SHARE YOUR EXPERIENCE <br>@<%=place.name%>!</h4>

                <form id="feedback" action="/review" method="POST"
                    style="margin: 0;max-width: 100%; margin-bottom: 3%;">
                    <div class="form-group">
                        <div class="col-md-11 inputGroupContainer">
                            <div class="input-group">
                                <input name="name" placeholder="Name" class="form-control input-review" type="text" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-11 inputGroupContainer">
                            <div class="input-group">
                                <input name="email" type="email" class="form-control input-review"
                                    placeholder="email@domain.com" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-11 inputGroupContainer">
                            <span class="fa fa-star 1"></span>
                            <span class="fa fa-star 2"></span>
                            <span class="fa fa-star 3"></span>
                            <span class="fa fa-star 4"></span>
                            <span class="fa fa-star 5"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-11 inputGroupContainer">
                            <div class="input-group">
                                <textarea class="form-control input-review" name="message" id="review" rows="3"
                                    placeholder="Write your experiences here..."></textarea>

                            </div>
                        </div>
                    </div>

                    <input name="stars" id="stars" value="" hidden required>
                    <input name="place" value="<%=place.name%>" hidden>

                    <button type="submit" class="btn btn-primary">Submit</button>


                </form>
            </div>

        </div>
    </div>
    </body>

    <%-include("footer")-%>